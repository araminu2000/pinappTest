<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{% block title %}Flanders' DRIVE{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('vendor/jquery-ui/jquery-ui-1.11.0.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/cegekaflandersdrive/css/application.css') }}" rel="stylesheet" />
            <link href="{{ asset('bundles/cegekaflandersdrive/css/overlay.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block header_style %}{% endblock %}
        {% block header_scripts %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body id="body">
        <div id="itp_overlay" class="black_overlay" style="display: hidden"></div>
        <div id="loading" class="loading" style="display: hidden"></div>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script type="text/javascript" src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
            <script type="text/javascript" src="{{ asset('bundles/cegekaflandersdrive/js/overlay.js') }}"></script>
        {% endblock %}
    </body>
</html>